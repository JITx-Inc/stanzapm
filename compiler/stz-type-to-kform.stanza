val USAGE-SET = HashTable<Int,True>()
defn used () : to-vector<Int>(keys(USAGE-SET))
defn record-use (n:Int) : USAGE-SET[n] = true

defn accumulate-used<?T> (f: () -> ?T) -> T :
  clear(USAGE-SET)
  f()

