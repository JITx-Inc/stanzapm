public lostanza defn load-data (vmt:ref<VMTable>, d:ref<VMData>) -> ref<False> :
  ;Put into data buffer
  val size = length(data(d)).value
  val size* = (size + 7L) & -8L
  val pos = alloc(vmt.data, size*) / 8
  call-c memcpy(addr!(vmt.data.mem[pos]), addr!(data(d).data), size)
  if non-negative?(vmt.data-positions, id(d)) : fatal("Data already defined.")
  set-data-position(vmt, id(d), new Int{pos as int})
  return false

public defn load-datas (vmt:VMTable, ds:Tuple<VMData>) :
  do(load-data{vmt, _}, ds)

lostanza defn set-data-position (vmt:ref<VMTable>, d:ref<Int>, pos:ref<Int>) -> ref<False> :
  val size = length(vmt.data-positions).value
  if d.value >= size :
    vmt.data-positions = enlarge(vmt.data-positions, new Int{d.value + 1}, new Int{-1})
  set(vmt.data-positions, d, pos)
  return false

lostanza defn non-negative? (xs:ref<Array<Int>>, i:ref<Int>) -> long :
  val l = length(xs).value
  if i.value < l :
    if get(xs,i).value >= 0 : return 1L
    else : return 0L
  else :
    return 0L

