;============================================================
;===================== Function Loading =====================
;============================================================

public lostanza defn load-function (vmt:ref<VMTable>, id:ref<Int>, lf:ref<LinkedFunction>) -> ref<False> :
  ;Load instructions into instruction vector
  val address = length(vmt.instructions)
  add-all(vmt.instructions, instructions(lf))
  set-function-address(vmt, id, address)

  ;Load fileinfos into fileinfo table
  load-fileinfos(vmt, fileinfos(lf), address)
  
  return false

public lostanza defn load-function (vmt:ref<VMTable>, id:ref<Int>, ef:ref<EncodedFunction>) -> ref<False> :
  ;Load bytecode into bytecode vector
  val num-bytes = length(buffer(ef))
  val offset = alloc(vmt.bytecode, num-bytes.value)
  call-c memcpy(vmt.bytecode.mem + offset, data(buffer(ef)), num-bytes.value)

  ;Put into function table
  val pos = new Int{(offset / 4) as int}
  set-function-address(vmt, id, pos)
  
  ;Load fileinfos into fileinfo table
  load-fileinfos(vmt, fileinfos(ef), pos)
  
  return false

lostanza defn set-function-address (vmt:ref<VMTable>, f:ref<Int>, address:ref<Int>) -> ref<False> :
  val size = length(vmt.function-addresses).value
  if f.value >= size :
    vmt.function-addresses = enlarge(vmt.function-addresses, new Int{f.value + 1}, new Int{-1})
  set(vmt.function-addresses, f, address)
  return false

;============================================================
;=================== IntArray Enlarging =====================
;============================================================
    
defn enlarge (xs:StableIntArray, min-size:Int, default:Int) -> StableIntArray :
  var new-size:Int = length(xs)
  while new-size < min-size : new-size = new-size * 2
  val ys = StableIntArray(new-size)
  block-copy(length(xs), ys, 0, xs, 0)
  for i in length(xs) to length(ys) do :
    ys[i] = default
  ys

defn enlarge (xs:StableLongArray, min-size:Int, default:Long) -> StableLongArray :
  var new-size:Int = length(xs)
  while new-size < min-size : new-size = new-size * 2
  val ys = StableLongArray(new-size)
  block-copy(length(xs), ys, 0, xs, 0)
  for i in length(xs) to length(ys) do :
    ys[i] = default
  ys

